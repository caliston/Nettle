#ifndef HOTLIST_H
#define HOTLIST_H

typedef enum
{
  ht_invalid,
  ht_telnet,
  ht_ssh,
  ht_task
} hotlisttype;

typedef struct _hotlistnode
{
  struct _hotlistnode *next;
  hotlisttype type;
  char *label;
  char *host;
  char *command;
  unsigned short port;
  unsigned char vttype;               /* An index in to the vt type array -- the user gives a string, and we match that to the array at load time */
  unsigned char uselineeditor;        /* bit=0:use yes/no.    bit1:intially active?    bit3:type (inline or below) */
  unsigned short terminal_width;
  unsigned short terminal_height;
  unsigned short scrollback;
} hotlistnode;

extern void lose_hotlist(void);
extern void load_hotlist(void);
extern void create_hotlist_menu(void);
extern hotlistnode *decode_hotlist_menu(int entry);

#endif /* HOTLIST_H */
