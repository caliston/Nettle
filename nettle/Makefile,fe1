# $Id$

CC = cc
CFLAGS = -c -strict -IC: -INetlib: -fa -apcs 3/26 -throwback -depend !Depend #-g #-DFORTIFY

LINK = link
LINKFLAGS = #-d

WIPE = wipe
WIPEFLAGS = ~CFR~V

ASM = objasm
ASMFLAGS = -apcs 3/26

TEMPLATES = !Nettle.Resources.UK.Templates

OBJS = chardefn.o choices.o dnslib.o globals.o init.o keyboard.o lineedit.o \
       main.o misc.o hotlist.o nettle.o process.o socket.o quit.o seln.o \
       wimp.o zapgen.o fortify.o sockwatch.o messages.o termlist.o url.o \
       wimputil.o spool.o mouse.o

all:	!Nettle.!RunImage

templheadr: templheadr.o
        $(LINK) -o $@ $(LINKFLAGS) $? C:o.stubs

!Nettle.!RunImage:	$(OBJS)
	$(LINK) -o $@ $(LINKFLAGS) $(OBJS) C:o.stubs Netlib:o.NetLib
	squeeze $@

clean:
	$(WIPE) o.* $(WIPEFLAGS)

templ.h: templheadr $(TEMPLATES)
	<Prefix$Dir>.templheadr $(TEMPLATES) $@

.SUFFIXES: .o .s .c

.s.o:
	$(ASM) $(ASMFLAGS) $< -o $@

.c.o:
	$(CC) $(CFLAGS) -o $@ $<

o.wimp: templ.h

# Dynamic dependencies:
